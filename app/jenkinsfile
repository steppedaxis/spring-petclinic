pipeline {
    agent any
    stages {
        stage('build stage, including sonarqube scanner analysis') {
            steps {
                script {
                    sh "docker build -t spring-petclinic -f app/Dockerfile ."
                }
            }
        }
        stage('docker login before pushing image to dockerhub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'nirrea839'){
                        
                    }
                }
            }
        }        
        stage('tag and push image to dockerhub stage') {
            steps {
                script {
                    sh "docker tag nirrea839/spring-petclinic:latest nirrea839/spring-petclinic:${env.BUILD_NUMBER}"
                    sh "docker push nirrea839/spring-petclinic:latest"
                    sh "docker push nirrea839/spring-petclinic:${env.BUILD_NUMBER}"
                }
            }
        }
    }
}