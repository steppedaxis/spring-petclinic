pipeline {
    agent any
    stages {
        stage('build stage, including sonarqube scanner analysis') {
            steps {
                script {
                    sh "docker build -t nirrea839/spring-petclinic:latest -f app/Dockerfile ."
                }
            }
        }
        stage('docker login before pushing image to dockerhub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-creds'){
                        sh "docker tag spring-petclinic:latest nirrea839/spring-petclinic:latest"
                        sh "docker push nirrea839/spring-petclinic:latest"
                        sh "docker push nirrea839/spring-petclinic:${BUILD_NUMBER}"
                    }
                }
            }
        }        
    }
}