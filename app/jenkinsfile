pipeline {
    agent any
    stages {
        stage('build stage, including sonarqube scanner analysis') {
            steps {
                script {
                    sh "docker build -t spring-petclinic -f app/Dockerfile ."
                }
            }
        }
        stage('run stage') {
            steps {
                script {
                    // Build the artifact in a separate stage
                    sh "docker run --rm spring-petclinic"
                }
            }
        }
    }
}